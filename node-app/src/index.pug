doctype html
html(lang="ja")
    head
        meta(charset="UTF-8")
        // '=半スペース'を入れると変数を展開できる
        title= title
        //.をつけるとそのままCSSを書くことができる
        style.
            h1 {
                font-size: 60pt;
                color: #eee;
                text-align: right;
                margin: 0;
            }
            body {
                font-size: 14pt;
                color: #999;
                margin: 5px;
            }
    body
        header
            h1= title
        main
            p= content